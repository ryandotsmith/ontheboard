<div id="show_subject_permissions">
<% if subject.inherits %>
	<p>
		<a class="ast">*</a><h1 class="tips">This subject inherits permissions</h1>
	</p>
<% else %>

<table>
	<td>user</td>
	<td>read</td>
	<td>execute</td>
	<td>write</td>
	<% subject.list_permissions.each do |user,permissions| %>
	<tr>
		<td><%= user %></td>
		<td><%= "x" if permissions.include?('read')%></td>
		<td><%= "x" if permissions.include?('execute')%></td>
		<td><%= "x" if permissions.include?('write')%></td>
	</tr>
	<% end %>
</table>

<% end %>
</div><!--end show_subject_permissions-->
